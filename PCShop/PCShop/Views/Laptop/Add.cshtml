@model LaptopImportViewModel

@{
	ViewData["Title"] = "Add a laptop";
}

<h1 class="text-center mb-2">@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Brand" class="form-label">Brand <sup>(required)</sup></label>
                <input asp-for="@Model.Brand" class="form-control" aria-required="true" placeholder="Enter brand" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CPU" class="form-label">CPU <sup>(required)</sup></label>
                <input asp-for="@Model.CPU" class="form-control" aria-required="true" placeholder="Intel Core i7 (12 cores)" />
                <span asp-validation-for="CPU" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RAM" class="form-label">RAM (in GB) <sup>(required)</sup></label>
                <input asp-for="@Model.RAM" class="form-control" aria-required="true" placeholder="32" />
                <span asp-validation-for="RAM" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.SSDCapacity" class="form-label">SSD capacity (in GB) <sup>(required)</sup></label>
                <input asp-for="@Model.SSDCapacity" class="form-control" aria-required="true" placeholder="512" />
                <span asp-validation-for="SSDCapacity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.VideoCard" class="form-label">Video card model <sup>(required)</sup></label>
                <input asp-for="@Model.VideoCard" class="form-control" aria-required="true" placeholder="NVIDIA GeForce RTX 3070" />
                <span asp-validation-for="VideoCard" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DisplaySize" class="form-label">Displpay size (in inches) <sup>(required)</sup></label>
                <input asp-for="@Model.DisplaySize" class="form-control" aria-required="true" placeholder="15.6" />
                <span asp-validation-for="DisplaySize" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Type" class="form-label">Type <sup>(required)</sup></label>
                <input asp-for="@Model.Type" class="form-control" aria-required="true" placeholder="Gaming" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label">Quantity <sup>(required)</sup></label>
                <input asp-for="@Model.Quantity" class="form-control" aria-required="true" placeholder="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label">Price <sup>(required)</sup></label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" placeholder="1250.00" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            @if ((this.User?.Identity?.IsAuthenticated ?? false) 
                 && this.User.IsInRole(Administrator))
            {
                <div class="mb-3">
                    <label asp-for="@Model.Warranty" class="form-label">Warranty (in months)</label>
                    <input asp-for="@Model.Warranty" class="form-control" placeholder="12" />
                    <span asp-validation-for="Warranty" class="text-danger"></span>
                </div>
            }

            <div class="mb-3">
                <label asp-for="@Model.DisplayCoverage" class="form-label">Display coverage</label>
                <input asp-for="@Model.DisplayCoverage" class="form-control" placeholder="Matte" />
                <span asp-validation-for="DisplayCoverage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DisplayTechnology" class="form-label">Display technology</label>
                <input asp-for="@Model.DisplayTechnology" class="form-control" placeholder="LED" />
                <span asp-validation-for="DisplayTechnology" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Resolution" class="form-label">Display resolution</label>
                <input asp-for="@Model.Resolution" class="form-control" placeholder="1920x1080 Full HD" />
                <span asp-validation-for="Resolution" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Color" class="form-label">Laptop color</label>
                <input asp-for="@Model.Color" class="form-control" placeholder="Black" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Laptop image URL <sup>(highly recommended)</sup></label>
                <input asp-for="@Model.ImageUrl" class="form-control" placeholder="https://laptop.bg/system/images/296698/double/lenovo_ideapad_3_15_ultraslim_gen_6_82KU004NBM.png" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
