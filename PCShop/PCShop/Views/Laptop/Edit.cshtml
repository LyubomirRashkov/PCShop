@model LaptopEditViewModel

@{
    ViewData["Title"] = "Edit laptop";
}

<h1 class="text-center mb-2">@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            @Html.HiddenFor(l => l.Id)
            <div class="mb-3">
                <label asp-for="@Model.Brand" class="form-label">Brand <sup>(required)</sup></label>
                <input asp-for="@Model.Brand" class="form-control" aria-required="true" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CPU" class="form-label">CPU <sup>(required)</sup></label>
                <input asp-for="@Model.CPU" class="form-control" aria-required="true" />
                <span asp-validation-for="CPU" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RAM" class="form-label">RAM (in GB) <sup>(required)</sup></label>
                <input asp-for="@Model.RAM" class="form-control" aria-required="true" />
                <span asp-validation-for="RAM" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.SSDCapacity" class="form-label">SSD capacity (in GB) <sup>(required)</sup></label>
                <input asp-for="@Model.SSDCapacity" class="form-control" aria-required="true" />
                <span asp-validation-for="SSDCapacity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.VideoCard" class="form-label">Video card model <sup>(required)</sup></label>
                <input asp-for="@Model.VideoCard" class="form-control" aria-required="true" />
                <span asp-validation-for="VideoCard" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DisplaySize" class="form-label">Displpay size (in inches) <sup>(required)</sup></label>
                <input asp-for="@Model.DisplaySize" class="form-control" aria-required="true" />
                <span asp-validation-for="DisplaySize" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Type" class="form-label">Type <sup>(required)</sup></label>
                <input asp-for="@Model.Type" class="form-control" aria-required="true" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label">Quantity <sup>(required)</sup></label>
                <input asp-for="@Model.Quantity" class="form-control" aria-required="true" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label">Price <sup>(required)</sup></label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            @if ((this.User?.Identity?.IsAuthenticated ?? false)
            && this.User.IsInRole(Administrator))
            {
                <div class="mb-3">
                    <label asp-for="@Model.Warranty" class="form-label">Warranty (in months) <sup>(required)</sup></label>
                    <input asp-for="@Model.Warranty" class="form-control" />
                    <span asp-validation-for="Warranty" class="text-danger"></span>
                </div>
            }

            <div class="mb-3">
                <label asp-for="@Model.DisplayCoverage" class="form-label">Display coverage</label>
                <input asp-for="@Model.DisplayCoverage" class="form-control" />
                <span asp-validation-for="DisplayCoverage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DisplayTechnology" class="form-label">Display technology</label>
                <input asp-for="@Model.DisplayTechnology" class="form-control" />
                <span asp-validation-for="DisplayTechnology" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Resolution" class="form-label">Display resolution</label>
                <input asp-for="@Model.Resolution" class="form-control" />
                <span asp-validation-for="Resolution" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Color" class="form-label">Laptop color</label>
                <input asp-for="@Model.Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Laptop image URL <sup>(highly recommended)</sup></label>
                <input asp-for="@Model.ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="text-center mb-3">
                <input class="btn btn-primary" type="submit" value="Save changes" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
