@{
	ViewData["Title"] = "Error";
}

<div class="row">
	<div class="col-sm-2"></div>

	<div class="col-sm-8">
		<div class="card text-center mt-5">
			<div class="text-center">
				<img class="card-img-top" src="https://img.freepik.com/premium-vector/login-access-denied-vector-illustration-system-refuses-password-error-entry-computer-device-showing-user-does-have-permission-website-mobile-development_2175-1277.jpg?w=2000" style="height: 225px; width: 475px" alt="Access denied image">
