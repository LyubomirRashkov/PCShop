@model IEnumerable<UserExportViewModel>

@{
	ViewData["Title"] = "Promote to admins";
}

<h1 class="text-center mb-2">@ViewData["Title"]</h1>

<hr />

@if (Model.Any())
{
	<table class="table table-striped table-hover mt-5">
		<thead>
			<tr class="table-primary">
				<td>Username</td>
				<td>Email</td>
				<td>First name</td>
				<td>Last name</td>
				<td>Promote</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td>@user.Username</td>
					<td>@user.Email</td>
					<td>@user.FirstName</td>
					<td>@user.LastName</td>
					<td>
						<a asp-area="Administration" asp-controller="Account" asp-action="PromoteToAdmin" asp-route-id="@user.Id" class="btn btn-primary">Promote</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h3 class="text-center mt-5">There are no users which are not administrators!</h3>
}

<br />

<h4>Go back to <a asp-controller="Home" asp-action="Index">Home</a> Page</h4>
